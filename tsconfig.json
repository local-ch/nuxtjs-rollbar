{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./build",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "strict": true,
    "target": "ES2018",
    "types": [
      "@nuxt/types",
      "@types/node",
      "@types/jest",
    ],
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "include": [
    "./lib",
  ],
}
